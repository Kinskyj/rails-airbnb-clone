// Import Google fonts
@import url('https://fonts.googleapis.com/css?family=Lato:300,400,700');

@font-face {
  font-family: 'FuriousStyles';
  src: url('<%= asset_path("fonts/FuriousStyle/FuriousStyles.eot") %>');
  src: url('<%= asset_path("fonts/FuriousStyle/FuriousStyles.eot#iefix") %>') format('embedded-opentype'),
       url('<%= asset_path("fonts/FuriousStyle/FuriousStyles.woff") %>') format('woff'),
       url('<%= asset_path("fonts/FuriousStyle/FuriousStyles.ttf") %>') format('truetype');
}


// Define fonts for body and headers
$body-font: "Lato", "sans-serif";
$headers-font: "Lato", "sans-serif";



